<div class="container">
	<div class="row">
		<div class="col-sx-12">
			<h3 class="prefecture-title">都道府県を選択してください</h3>
			<table class="table">
				<%= form_with url: search_path, class: "search_form", method: :get, local: true do |f| %>
				<%= f.text_field :search, class: "field", value: params[:search], placeholder: "都道府県検索" %>
				<%= f.submit "検索", class: "btn btn-primary" %>
			<% @prefectures.each do |prefecture| %>
			<tr><td>
			<%= link_to prefecture_sports_path(prefecture) do %>
		  <%= prefecture.content %>
		  <% end %>
			</td></tr>
			<% end %>
		</table>
		</div>
	</div>
</div>