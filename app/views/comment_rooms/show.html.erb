<div class="container">
	<div class="row">
		<div class="col-xs-10">
			<h3>ジャンル：<%= @comment_room.sport.sport_genre %></h3>
			<h3>ルームタイトル：<%= @comment_room.title %></h3>
			<%= form_with model:@comment, url:comments_path,  method: :post, local: true do |f| %>
			<%= f.text_area :sentence %>
			<%= f.hidden_field :comment_room_id, :value => @comment_room.id %>
			<%= f.submit "コメントする", class: "btn btn-primary" %>
			<% end %>
		<table class="table">
			<% @comments.each do |comment| %>
			<tr>
			<td><%= comment.user.name %></td>
			<td><%= comment.sentence %></td>
			<td><%= comment.created_at.strftime('%Y年 %m月 %d日 %H時 %M分 %S秒')%></td>
			<td>
				<% if current_user.already_liked?(comment) %>
				<%= link_to '', "/comments/#{comment.id}/likes", method: :delete, class: "fas fa-heart" %>
				<%= comment.liked_users.count %>
				<% else %>
				<%= link_to '', comment_likes_path(comment), method: :post, class: "far fa-heart" %>
				<% end %>
		  </td>
		  </tr>
			<% end %>
		</table>
	  </div>
	</div>
</div>