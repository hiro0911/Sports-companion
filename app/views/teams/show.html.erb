<div class="container">
	<div class="row">
		<div class="col-xs-10">
			<h3 class="title">チーム募集詳細</h3>
			<%= attachment_image_tag @team, :image, size: "300x300", fallback: "no_image.png", size: "300x300" %>
			<div></div>
			
			<table class="table">
				<tr>
					<td>チーム名</td>
					<td><%= @team.team_name %></td>
				</tr>
				<tr>
					<td>活動地域</td>
					<td><%= @team.area %></td>
				</tr>
				<tr>
					<td>募集人数</td>
					<td><%= @team.applicant %></td>
				</tr>
				<tr>
					<td>活動スタンス</td>
					<td><%= @team.stance %></td>
				</tr>
				<tr>
					<td>チーム説明</td>
					<td><%= @team.explanation %></td>
				</tr>
			</table>
			<!-- @teamのメンバーに現在のユーザーがいる場合 -->
			<h3 class="title">メニュー</h3>
			<% if @team.users.include?(current_user) %>
			<%= link_to "編集", edit_team_path(@team), class: "btn btn-primary team-show-btn" %>
			<%= link_to "コミュニティページに移動", "/team_comment_rooms/#{@team_comment_room.id}", class: "btn btn-primary" %>
			<%= link_to "チーム加入申請者一覧", team_applicants_path(@team), class: "btn btn-primary" %>
			<% else %>
			<%= link_to "チーム加入申込み", new_team_applicant_path(@team), class: "btn btn-primary" %>
			<% end %>
			<%= link_to "メンバー一覧を見る", team_team_members_path(team_id: @team.id), class: "btn btn-primary" %>
			<%= link_to "募集一覧に戻る", "/prefectures/#{@team.prefecture_id}/sports/#{@team.sport_id}/teams", class: "btn btn-secondary" %>
		</div>
	</div>
</div>