<!-- お問い合わせ内容確認ページ -->
<div class="container">
	<div class="row">
		<div class="col-10">
			<h3 class="title">お問い合わせ</h3>
			<%= form_with model: @inquiry, url: inquiry_index_path, method: :post, local: true do |f| %>
			<table class="table">
				<tr>
					<th>名前</th>
					<td>
						<%= f.hidden_field :name %>
						<%= @inquiry.name %>
					</td>
				</tr>
				<tr>
					<th>メールアドレス</th>
					<td>
						<%= f.hidden_field :email %>
						<)%= @inquiry.email %>
					</td>
				</tr>
				<tr>
					<th>お問い合わせ内容</th>
					<td>
						<%= f.hidden_field :message %>
						<%= simple_format(@inquiry.message) %>
					</td>
				</tr>
			</table>
			<%= f.submit '送信', class: 'btn btn-primary' %>
			<% end %>
		</div>
	</div>
</div>	
