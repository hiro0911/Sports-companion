<!-- 新規お問い合わせページ -->
<div class="container">
	<div class="row">
		<div class="col-10">
			<%= form_for @inquiry, url: "/inquiry/confirm", method: :get do |f| %>
			<!-- エラー時にメッセージ表示 -->
			<%= render 'layouts/error_messages', model: f.object %>
			<div class="page-header">
				<h3 class="title">お問い合わせ</h3>
			</div>
			<table class="table">
				<tr>
					<th>名前<span class="text-danger">（必須）</span></th>
					<td><%= f.text_field :name %></td>
				</tr>
				<tr>
					<th>メールアドレス<span class="text-danger">（必須）</span></th>
					<td><%= f.text_field :email %></td>
				</tr>
				<tr>
					<th>お問い合わせ内容<span class="text-danger">（必須）</th>
					<td><%= f.text_area :message %></td>
				</tr>
			</table>
			<%= f.submit '確認', class: 'btn btn-primary' %>
			<% end %>
		</div>
	</div>
</div>

