<% if @user == current_user %>
<h2>マイページ</h2>
<% else %>
<h2>ユーザー詳細ページ</h2>
<% end %>
<div class="container">
	<div class="row">
		<div class="col-xs-10">
			<table class="table">
				<h3>登録情報</h3>
				<tr>
					<th>ニックネーム</th>
					<td><%= @user.name %></td>
				</tr>
				<tr>
					<th>メールアドレス</th>
					<td><%= @user.email %></td>
				</tr>
				<tr>
					<th>年齢</th>
					<td><%= @user.age %></td>
				</tr>
				<tr>
					<th>性別</th>
					<td><%= @user.sex %></td>
				</tr>
				<tr>
					<th>自己紹介</th>
					<td><%= @user.introduction %></td>
				</tr>
			</table>
					<%= link_to "編集する", edit_user_path(current_user), class: "btn btn-primary" %>
		</div>		
		<div class="col-xs-6">
			<tr>
				<th>マイチーム</th>
				<td></td>
			</tr>
		</div>
	</div>
</div>