

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h2 class="sign-in-title">ログイン</h2>
      <table class="table">
        <tr>
          <td><%= f.label :email, "メールアドレス" %></td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </tr>
        <tr>
          <td><%= f.label :password, "パスワード" %></td>
          <td><%= f.password_field :password, autocomplete: "current-password" %></td>
        </tr>
        <% if devise_mapping.rememberable? %>
        <tr>
          <td></td>
          <td><%= f.check_box :remember_me %>
            <%= f.label :remember_me, "保存する" %></td>
        </tr>
      </table>
      <% end %>
      <div class="actions">
        <%= f.submit "ログイン", class: "btn btn-primary btn-sign-in" %>
      </div>
      <!-- google認証ログイン -->
      <%= link_to 'Googleログイン',  user_google_omniauth_authorize_path %>
      <p>会員登録がお済みでない方は<%= link_to "こちら", new_user_registration_path %></p>
      <% end %>
    </div>
  </div>
</div>


