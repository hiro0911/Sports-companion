<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<h3>スポーツを選択してください</h3>
			<% @sports.each do |sport| %>
			<div class="col-xs-4">
				<%= link_to comments_path(sport) do %>
				<%= attachment_image_tag sport, :image_id, :fill, 100, 200, fallback: "no_image.png", size: "200x100" %>
				<%= sport.sport_genre %>
				<% end %>
			</div>
			<% end %>
		</div>
	</div>
</div>