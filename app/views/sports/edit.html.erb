<div class="container">
	<div class="row">
		<div class="col-6">
			<h3 class="title"><%= @sport.sport_genre %>画像編集</h3>
			<%= form_with model: @sport, url: sport_path(@sport.id), method: :patch, local: true do |f| %>
			<%= render 'layouts/error_messages', model: f.object %>
			<table class="table">
				<%= attachment_image_tag @sport, :image, size: "200x200", fallback: "no_image.png" %>
				<tr>
					<td><%= f.attachment_field :image %></td>
				</tr>
				<tr>
					<td><%= f.label :sport_genre, "スポーツ名" %></td>
					<td><%= f.text_field :sport_genre %></td>
				</tr>
			</table>
			<%= f.submit "更新", class: "btn btn-primary" %>
			<%= link_to "トップに戻る", root_path, class: "btn btn-primary" %>
			<%= link_to "スポーツジャンルを削除", "/sports/#{params[:id]}", method: :delete,data: { confirm: "【確認】スポーツジャンルを削除してもよろしいですか？" } , class: "btn btn-danger" %>
			<% end %>
		</div>
	</div>
</div>